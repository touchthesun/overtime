<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime Alert", sticky: false, image: :notice) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Overtime Error", sticky: false, image: :notice) %>
<% else flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "Overtime Notification", sticky: false, image: :notice) %>
<% end %>